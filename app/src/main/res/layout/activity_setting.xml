<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/baseline_stay_primary_portrait_black_48"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="摇一摇"
            android:textSize="20sp"
            android:gravity="center_vertical" />

        <Switch
            android:id="@+id/switch_shake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/baseline_brightness_medium_black_48"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="夜间模式"
            android:textSize="20sp"
            android:gravity="center" />

        <Switch
            android:id="@+id/switch_night"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/baseline_alarm_black_48"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="每日记账提醒"
            android:textSize="20sp"
            android:gravity="center" />

        <Switch
            android:id="@+id/switch_remind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/baseline_delete_forever_black_48"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清除语音图片数据"
            android:textSize="20sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>