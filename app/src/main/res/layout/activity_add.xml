<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/add_type_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/baseline_help_outline_24" />

            <TextView
                android:id="@+id/add_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/add_type_img"
                android:alpha="0.5"
                android:lines="1"
                android:text="类别"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/add_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270dp"
                android:text="0.00"
                android:background="@null"
                android:textColor="@color/colorRed"
                android:textSize="20dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />


        <android.support.design.widget.TabLayout
            android:id="@+id/add_tablayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabTextColor="@color/colorBlack"></android.support.design.widget.TabLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/add_viewpager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_datetime">

            <ImageView
                android:id="@+id/add_datetime_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/baseline_date_range_24" />

            <TextView
                android:id="@+id/add_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/add_datetime_img"
                android:alpha="0.5"
                android:lines="1"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/add_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/add_date_text"
                android:alpha="0.5"
                android:lines="1"
                android:layout_marginLeft="100dp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/add_position_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_location_on_24"
                android:layout_margin="15dp"
                />
            <EditText
                android:id="@+id/add_position_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:alpha="0.5"
                android:textSize="15dp"
                android:text=""
                android:lines="1"
                android:layout_toRightOf="@+id/add_position_img"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/add_edit_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_edit_24"
                android:layout_margin="15dp"
                />
            <EditText
                android:id="@+id/add_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:alpha="0.5"
                android:textSize="15dp"
                android:hint="备注"
                android:lines="1"
                android:layout_toRightOf="@+id/add_edit_img"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_image_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_camera"
                android:alpha="0.5"
                android:layout_margin="15dp"
                />
            <TextView
                android:id="@+id/add_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:alpha="0.5"
                android:textSize="15dp"
                android:text="上传图片或拍摄图片"
                android:lines="1"
                android:layout_toRightOf="@+id/add_image_img"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/colorLightGray" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
